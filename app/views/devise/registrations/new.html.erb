<div class="container pt-5 text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
       <%= devise_error_messages! %>
        <h2 class="form-signin-heading text-center">Zarejestruj się</h2>

          <div>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div>
            <%= f.label :hasło %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="pb-2">
            <%= f.label :powtórz_hasło %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="row correct text-center pb-3">
    
            <%= f.submit "Zaloguj się", style:"background-color: #0f5b94;" %>

          </div>

        <% end %>

</div>

<%= render 'shared/opinion' %>

<%= render 'shared/section_icons' %>
